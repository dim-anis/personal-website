---
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href="https://twitter.com/DmitryAnisov" target="_blank">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/dim-anis" target="_blank">GitHub</HeaderLink>
	</nav>
  <button
    id="theme-toggle"
    aria-label="auto"
    class="theme-toggle"
    title="Toggles light and dark"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="100%" fill="currentColor" viewBox="0 0 24 30"><path fill="currentColor" fill-rule="evenodd" d="M12 2.75a9.25 9.25 0 1 0 0 18.5 9.25 9.25 0 0 0 0-18.5ZM1.25 12C1.25 6.063 6.063 1.25 12 1.25S22.75 6.063 22.75 12 17.937 22.75 12 22.75 1.25 17.937 1.25 12Z" clip-rule="evenodd"/><path fill="currentColor" fill-rule="evenodd" d="M11.25 6c0-.933.782-1.825 1.853-1.672a7.752 7.752 0 0 1 0 15.344c-1.07.153-1.853-.74-1.853-1.672V6Zm1.562-.16a.22.22 0 0 0-.062.16v12c0 .073.03.128.062.16.015.014.03.021.04.024.008.003.02.006.04.003a6.251 6.251 0 0 0 0-12.374.083.083 0 0 0-.04.002.108.108 0 0 0-.04.026Z" clip-rule="evenodd"/></svg>
  </button>
</header>
<style>
	header {
    display: flex;
    justify-content: space-between;
		margin: 2rem 0rem;
	}
	h2 {
		margin: 0.5em 0;
	}
  .theme-toggle {
    background: none;
    display: flex;
    align-items: center;
    border: none;
    cursor: pointer;
    padding: 0;
    height: var(--fs-600);
    color: var(--color-text-400);
  }
  .theme-toggle svg {
    inline-size: 100%;
    block-size: 100%;
  }
</style>
