---
type Props = {
  name: string;
  deployHref?: string;
  ghHref: string;
  desc: string;
};

const { name, deployHref, ghHref, desc } = Astro.props;
---

<div
  class="rounded-xl border bg-card text-card-foreground shadow flex flex-col justify-between"
>
  <div class="flex-col p-6 items-start gap-4 space-y-0">
    <div class="space-y-1">
      <h3 class="font-semibold leading-none tracking-tight">{name}</h3>
      <p class="text-sm text-muted-foreground">{desc}</p>
    </div>
  </div>
  <div class="p-6 pt-0">
    <div class="text-sm">
      <div class="flex gap-2">
        {
          deployHref && (
            <a
              href={deployHref}
              class="underline underline-offset-4 hover:text-primary"
            >
              Live
            </a>
          )
        }
        <a href={ghHref} class="underline underline-offset-4 hover:text-primary"
          >Code</a
        >
      </div>
    </div>
  </div>
</div>
