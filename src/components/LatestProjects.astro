---
import ProjectCard from '../components/ProjectCard.astro';
---

<section aria-labelledby="projects-title">
  <h2 id="projects-title">Projects</h2>
  <ul class='projects-wrapper'>
    <ProjectCard 
      href='https://github.com/dim-anis/tg-workout-tracker'
      title='tg-workout-tracker' 
      description='A workout tracker built with GrammyJS.'
      language='TypeScript'
    />
    <ProjectCard 
      href='https://github.com/dim-anis/personal-website'
      title='personal-website' 
      description='My personal website created with Astro.'
      language='TypeScript'
    />
  </ul>
  <button>
    <a href='https://github.com/dim-anis?tab=repositories' target="_blank">
      <span class="button-title">
        <span>
          See all
        </span>
        <svg width="800px" height="800px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M4 12H20M20 12L14 6M20 12L14 18" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </span>
    </a>
  </button>
</section>
<style>
  .projects-wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    list-style-type: none;
    padding: unset;
  }
  .projects-wrapper > * {
    flex: 1;
  }
  @media (min-width: 650px) {
    .projects-wrapper {
      flex-wrap: wrap;
      flex-direction: row;
    }
  }
  button {
    background: none;
    color: var(--color-text-200);
    font-size: var(--fs-300);
    border: none;
    display: inline-block;
    float: right;
  }
  a {
    text-decoration: none;
  }
  svg {
    height: 100%;
    width: var(--fs-400);
  }
  .button-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
</style>
